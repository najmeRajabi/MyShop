<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
    android:layout_width="140dp"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imv_list_home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guidelineImv"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txv_name_list_Home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="5dp"
                android:textColor="@color/title_color"
                android:textSize="@dimen/titleSizeHomeItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guidelineImv"
                app:layout_constraintBottom_toTopOf="@id/txv_price_list_Home"
                tools:text="name" />

            <TextView
                android:id="@+id/txv_price_list_Home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:layoutDirection="rtl"
                android:textColor="@color/title_color"
                android:textSize="@dimen/priceSizeHomeItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txv_name_list_Home"
                app:layout_constraintBottom_toTopOf="@id/imv_rate_item"
                tools:text="price" />

            <ImageView
                android:id="@+id/imv_rate_item"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_star_rate_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txv_price_list_Home"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="5dp"
                android:layout_marginEnd="18dp"/>
            <TextView
                android:id="@+id/txv_rateCount_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/imv_rate_item"
                app:layout_constraintTop_toTopOf="@id/imv_rate_item"
                app:layout_constraintBottom_toBottomOf="@id/imv_rate_item"
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/txv_rate_item"
                tools:text="4"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineImv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>