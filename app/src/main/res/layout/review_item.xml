<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/txv_reviewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layoutDirection="rtl"
            android:layout_gravity="start"

            tools:text="name"/>

        <TextView
            android:id="@+id/txv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/reviews"
            android:layoutDirection="rtl"
            android:layout_margin="18dp"/>


        </LinearLayout>
        <ImageView
            android:id="@+id/imv_rate_review"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_star_rate_24"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>
        <TextView
            android:id="@+id/txv_rateCount_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_gravity="bottom|start"
            android:textSize="@dimen/txv_rate_item"
            tools:text="4"/>

        <ImageView
            android:id="@+id/imv_edit_review"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>
        <ImageView
            android:id="@+id/imv_delete_review"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>


    </androidx.cardview.widget.CardView>
</layout>