            <!--            </androidx.cardview.widget.CardView>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_gray"
                app:layout_constraintTop_toBottomOf="@id/imv_detail" />

            <TextView
                android:id="@+id/txv_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:maxLines="2"
                android:padding="10dp"
                android:text="@{vModel.product.name}"
                android:textColor="@color/title_color"
                android:textSize="@dimen/titleSizeHomeItem"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/guideline3"
                tools:text="name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_gray"
                app:layout_constraintTop_toBottomOf="@id/txv_name_detail" />

            <TextView
                android:id="@+id/txv_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:padding="10dp"
                android:textColor="@color/desc_color"
                android:textSize="@dimen/descSizeHomeItem"
                app:layout_constraintBottom_toTopOf="@id/txv_price_detail"
                app:layout_constraintTop_toBottomOf="@id/txv_name_detail"
                tools:text="description" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_gray"
                app:layout_constraintTop_toBottomOf="@id/txv_description_detail" />

            <TextView
                android:id="@+id/txv_price_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:padding="10dp"
                android:textColor="@color/desc_color"
                android:textSize="@dimen/descSizeHomeItem"
                app:layout_constraintBottom_toTopOf="@id/rating_detail"
                app:layout_constraintTop_toBottomOf="@id/txv_description_detail"
                tools:text="price" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_gray"
                app:layout_constraintTop_toBottomOf="@id/txv_price_detail" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_detail"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:progressTint="@color/golden"
                android:shadowColor="@color/desc_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txv_price_detail" />

            <TextView
                android:id="@+id/txv_rateCount_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:padding="10dp"
                android:textColor="@color/desc_color"
                android:textSize="@dimen/descSizeHomeItem"
                app:layout_constraintBottom_toBottomOf="@id/rating_detail"
                app:layout_constraintStart_toEndOf="@id/rating_detail"
                app:layout_constraintTop_toTopOf="@id/rating_detail" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>