<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vModel"
            type="com.example.myshop.ui.detail.ProductViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        tools:context=".ui.detail.ProductDetailFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coordinator_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize"
            android:paddingTop="?attr/actionBarSize"
            >



            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator_detail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:ci_drawable="@drawable/bg_circle"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                app:layout_constraintTop_toBottomOf="@id/viewPager_detail"
                style="@style/line_style"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txv_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:maxLines="2"
                android:padding="10dp"
                android:text="@{vModel.product.name}"
                android:textColor="@color/title_color"
                android:textSize="@dimen/titleSizeHomeItem"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/guideline3"
                tools:text="name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_gray"
                app:layout_constraintTop_toBottomOf="@id/txv_name_detail" />

            <TextView
                android:id="@+id/txv_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:padding="10dp"
                android:textColor="@color/desc_color"
                android:textSize="@dimen/descSizeHomeItem"
                app:layout_constraintBottom_toTopOf="@id/txv_price_detail"
                app:layout_constraintTop_toBottomOf="@id/txv_name_detail"
                tools:text="description" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_gray"
                app:layout_constraintTop_toBottomOf="@id/txv_description_detail" />

            <TextView
                android:id="@+id/txv_price_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:padding="10dp"
                android:textColor="@color/desc_color"
                android:textSize="@dimen/descSizeHomeItem"
                app:layout_constraintBottom_toTopOf="@id/rating_detail"
                app:layout_constraintTop_toBottomOf="@id/txv_description_detail"
                tools:text="price" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_gray"
                app:layout_constraintTop_toBottomOf="@id/txv_price_detail" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_detail"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:progressTint="@color/golden"
                android:shadowColor="@color/desc_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txv_price_detail" />

            <TextView
                android:id="@+id/txv_rateCount_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:padding="10dp"
                android:textColor="@color/desc_color"
                android:textSize="@dimen/descSizeHomeItem"
                app:layout_constraintBottom_toTopOf="@id/recycler_review"
                app:layout_constraintStart_toEndOf="@id/rating_detail"
                app:layout_constraintTop_toTopOf="@id/rating_detail" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/txv_rateCount_detail"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <include
            android:id="@+id/menu_detail"
            layout="@layout/menu_detail_product"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>