<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="?attr/colorSecondaryVariant"
        android:paddingBottom="?attr/actionBarSize"
        android:orientation="vertical"
        tools:context=".ui.customer.CustomerRegisterFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_changeTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/defaultMargin"
            android:layout_marginEnd="@dimen/defaultMargin"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imv_theme"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/palette"
                android:alpha="0.6"
               />

            <ImageView
                android:id="@+id/imv_circle_theme_dark"
                android:src="@drawable/circle"
                app:tint="@color/purple_700"
                style="@style/circle_theme_style"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imv_circle_theme_purple"
                android:src="@drawable/circle"
                app:tint="@color/purple_500"
                style="@style/circle_theme_style"
                android:visibility="gone"/>

        </LinearLayout>



        <ScrollView
            android:id="@+id/scroll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_changeTheme">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="@dimen/defaultMargin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/defaultMargin">


        <ImageView
            android:id="@+id/imv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txv_username_profile"
            tools:text="@string/username"
            style="@style/txv_profile_style"
            android:background="@drawable/bg_line"
            app:drawableEndCompat="@drawable/ic_baseline_person_24" />
        <TextView
            android:id="@+id/txv_id_profile"
            tools:text="@string/id"
            style="@style/txv_profile_style"
            android:background="@drawable/bg_line"
            app:drawableEndCompat="@drawable/check"/>
        <TextView
            android:id="@+id/txv_email_profile"
            tools:text="@string/emailAddress"
            style="@style/txv_profile_style"
            android:background="@drawable/bg_line"
            app:drawableEndCompat="@drawable/ic_baseline_mail_24" />

        <Button
            android:id="@+id/btn_deleteAccount_profile"
            style="@style/txv_profile_style"
            android:text="@string/deleteAccount"
            android:textColor="?attr/colorOnPrimary"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>