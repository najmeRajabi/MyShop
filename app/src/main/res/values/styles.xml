<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="text_description_product">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txv_profile_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/defaultMargin</item>
        <item name="android:layout_marginEnd">@dimen/defaultMargin</item>
        <item name="android:layout_marginTop">@dimen/defaultMargin</item>
        <item name="android:padding">@dimen/paddingMore</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="circle_theme_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginStart">@dimen/defaultMargin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="icon_location">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">@dimen/defaultMargin</item>
    </style>

    <dimen name="paddingMore">10dp</dimen>
</resources>